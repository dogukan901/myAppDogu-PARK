<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Parkyeri Düzenle(Edit)</h1>
        <div class="col-6 offset-3">
            <form action="/parkyerleri/<%= parkspot._id %>?_method=PUT " method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Başlık</label>
                    <input class="form-control" type="text" id="title" name="parkyeri[title]"
                        value="<%= parkspot.title %>" />
                </div>
                <br />
                <div class=" mb-3">
                    <label class="form-label" for="location">Yer</label>
                    <input class="form-control" type="text" id="location" name="parkyeri[location]"
                        value="<%= parkspot.location %>" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Görsel Linki(Url)</label>
                    <input class="form-control" type="text" id="image" name="parkyeri[image]"
                        value="<%= parkspot.image %>" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Parkyeri Fiyatı</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">₺</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="parkyeri[price]" value="<%= parkspot.price %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Açıklama</label>
                    <textarea class="form-control" type="text" id="description"
                        name="parkyeri[description]"><%= parkspot.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info" type="submit">Park Yeri Güncelle(Update)</button>
                </div>
            </form>
            <a href="/parkyerleri/<%= parkspot._id %> "> Parkyeri Bilgilerine Geri Dön</a>
        </div>
    </div>