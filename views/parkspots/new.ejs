<% layout('layouts/boilerplate') %>
  <div class="row">
    <h1 class="text-center">Yeni Parkyeri</h1>
    <div class="col-6 offset-3">
      <form action="/parkyerleri" method="POST">
        <div class="mb-3">
          <label class="form-label" for="title">Başlık</label>
          <input class="form-control" type="text" id="title" name="parkyeri[title]" />
        </div>
        <br />
        <div class="mb-3">
          <label class="form-label" for="location">Yer</label>
          <input class="form-control" type="text" id="location" name="parkyeri[location]" />
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Görsel Linki(Url)</label>
          <input class="form-control" type="text" id="image" name="parkyeri[image]" />
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Parkyeri Fiyatı</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">₺</span>
            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
              aria-describedby="price-label" name="parkyeri[price]">
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Açıklama</label>
          <textarea class="form-control" type="text" id="description" name="parkyeri[description]"></textarea>
        </div>
        <div class="mb-3">
          <button class="btn btn-success" type="submit">Park Yeri Ekle</button>
        </div>
      </form>
      <a href="/parkyerleri"> Go Back To All Parkspots Page</a>
    </div>
  </div>