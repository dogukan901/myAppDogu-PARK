<% layout('layouts/boilerplate') %>

<body>
  <h1>Bütün Park Yerleri</h1>
  <button onclick="location.href='/parkyerleri/new'" type="button">
    Wanna Add New Parkspot?
  </button>
  <ul>
    <% for(let parkspot of parkspots){ %>
    <div class="card" mb-3>
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= parkspot.image %> " alt="" />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= parkspot.title %></h5>
            <p class="card-text"><%= parkspot.description %></p>
            <p class="card-text">
              <small class="text-muted"><%= parkspot.location %></small>
            </p>
            <a class="btn btn-primary" href="/parkyerleri/<%= parkspot.id %> "
              >View <%= parkspot.title %>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </ul>
</body>
